<section
        id="contact"
        class="relative bg-neon_blue-700/80 py-20 text-flash_white-100 dark:bg-gray-900 dark:text-zinc-200 md:py-[120px]"
>
    <!-- Full Background Image -->
    <img
            src="public/images/contact.jpg"
            alt="Carpet Cleaning Van"
            class="absolute inset-0 w-full h-full object-cover z-0"
    />

    <!-- Gradient Overlay -->
    <div class="absolute inset-0   z-[1]"></div>

    <!-- Content Container -->
    <div class=" backdrop-blur-md text-white relative z-[2] container mx-auto px-4 grid grid-cols-1 lg:grid-cols-2 gap-8 items-start bg-gradient-to-r from-black/60 via-black/30 to-transparent rounded-md">
        <div>
            <!-- Heading and Subheading -->
            <div class="mb-8 text-white">
                <h2 class="text-4xl font-bold text-red_pantone">Contact us for a quote</h2>
                <p class="text-xl">Please include all the details you would like a quote on, eg number of rooms.</p>
            </div>

            <!-- Location and Get in Touch -->
            <div class="grid grid-cols-2 gap-4 mb-8">
                <!-- Location Section -->
                <div>
                    <h5 class="text-2xl font-bold text-red_pantone">Our Location</h5>
                    <p class="text-base">21 Borya bend, Glen Iris, 6230</p>
                </div>
                <!-- Get in Touch Section -->
                <div>
                    <h5 class="text-2xl font-bold text-red_pantone">Get in touch</h5>
                    <!--<p class="text-base">info@yourdomain.com</p>-->
                    <p class="text-base">elite.bunbury@gmail.com</p>
                    <p class="text-base">04 4891 2600</p>
                </div>
            </div>

            <!-- Operating Hours -->
            <div class="mb-8">
                <h5 class="text-2xl font-bold text-red_pantone">Operating hours</h5>
                <div class="flex flex-col">
                    <p>Mon: 8am - 8pm</p>
                    <p>Tue: 8am - 8pm</p>
                    <p>Wed: 8am - 8pm</p>
                    <p>Thu: 8am - 8pm</p>
                    <p>Fri: 8am - 8pm</p>
                    <p>Sat: 8am - 2pm</p>
                    <p>Sun: CLOSED</p>
                </div>
            </div>
        </div>

        <!-- Right Column: Contact Form -->
        <div class="rounded-lg bg-white p-8 shadow-lg dark:bg-gray-400 max-h-[80vh] overflow-y-auto">
            <!-- Form Wrapper -->
            <div id="form-wrapper">
                <form method="POST" id="form" class="space-y-6">
                    <input type="hidden" name="access_key" value="d81108d1-df14-4489-bedc-eb49377f965b"/>

                    <!-- Name Field -->
                    <div>
                        <label for="name" class="text-md mb-4 block font-bold text-zinc-900">Name*</label>
                        <input
                                type="text"
                                id="name"
                                name="name"
                                placeholder="Your Name"
                                class="w-full border-0 border-b border-slate-900 bg-transparent pb-3 text-zinc-700 placeholder:text-zinc-900/60 focus:border-primary focus:outline-none dark:border-dark-3"
                                required
                        />
                    </div>

                    <!-- Email Field -->
                    <div>
                        <label for="email" class="text-md mb-4 block font-bold text-zinc-900">Email*</label>
                        <input
                                type="email"
                                id="email"
                                name="email"
                                placeholder="example@domain.com"
                                class="w-full border-0 border-b border-slate-900 bg-transparent pb-3 text-zinc-700 placeholder:text-zinc-900/60 focus:border-primary focus:outline-none dark:border-dark-3"
                                required
                        />
                    </div>

                    <!-- Phone Field -->
                    <div>
                        <label for="phone" class="text-md mb-4 block font-bold text-zinc-900">Phone*</label>
                        <input
                                type="text"
                                id="phone"
                                name="phone"
                                placeholder="0412345678"
                                class="w-full border-0 border-b border-slate-900 bg-transparent pb-3 text-zinc-700 placeholder:text-zinc-900/60 focus:border-primary focus:outline-none dark:border-dark-3"
                                required
                        />
                    </div>

                    <!-- Location Field -->
                    <div>
                        <label for="location" class="text-md mb-4 block font-bold text-zinc-900">Location*</label>
                        <input
                                type="text"
                                id="location"
                                name="location"
                                placeholder="Type your location here"
                                class="w-full border-0 border-b border-slate-900 bg-transparent pb-3 text-zinc-700 placeholder:text-zinc-900/60 focus:border-primary focus:outline-none dark:border-dark-3"
                                required
                        />
                    </div>

                    <!-- Service Requested -->
                    <div>
                        <label for="message" class="text-md mb-4 block font-bold text-zinc-900">Service
                            requested*</label>
                        <textarea
                                id="message"
                                name="job requested"
                                rows="4"
                                placeholder="Include any additional information here"
                                class="w-full resize-none border-0 border-b border-slate-900 bg-transparent pb-3 text-zinc-700 placeholder:text-zinc-900/60 focus:border-primary focus:outline-none dark:border-dark-3"
                                required></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button
                                type="submit"
                                class="inline-block py-3 text-base font-medium text-white transition border border-transparent rounded-md bg-neon_blue-600 px-7 hover:bg-red_pantone-500"
                        >
                            Submit Form
                        </button>
                    </div>

                </form>
            </div>

            <!-- Thank You Message (Initially Hidden) -->
            <div id="thank-you-message" class="hidden">
                <h2 class="text-3xl font-bold">Thank you for reaching out!</h2>
                <p class="text-xl">We will get back to you as soon as possible.</p>
            </div>
        </div>
    </div>
    </div>
</section>

<!-- JavaScript for form submission and thank-you message -->
<script>
    const formElement = document.getElementById('form');
    const formWrapper = document.getElementById('form-wrapper');
    const thankYouMessage = document.getElementById('thank-you-message');

    if (formElement) {
        formElement.addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent default form submission

            // Hide form and show thank you message if both elements exist
            if (formWrapper && thankYouMessage) {
                formWrapper.classList.add('hidden');
                thankYouMessage.classList.remove('hidden');
            }
        });
    }
</script>
